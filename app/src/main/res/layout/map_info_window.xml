<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
    >

    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/iwTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Title"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/iwSnippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi. It's a long text with many many many words. One two three four five siz seven eight nine ten... One two three four five siz seven eight nine ten... One two three four five siz seven eight nine ten... One two three four five siz seven eight nine ten...  "
            android:maxLines="5"
            android:ellipsize="end"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageButton
            app:srcCompat="@drawable/ic_create_black_24dp"
            android:id="@+id/iwEdit"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:background="@android:color/transparent"
            />
        <ImageButton
            app:srcCompat="@drawable/ic_delete_black_24dp"
            android:id="@+id/iwDelete"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>