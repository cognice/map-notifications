<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp">

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/t_picker"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:np_width="60dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/primary_dark"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextColor="@color/primary"
            app:np_selectedTextSize="18sp"
            app:np_textColor="@color/primary"
            app:np_textSize="16sp"
            app:np_value="0"
            />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/h_picker"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:np_width="60dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/primary_dark"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextColor="@color/primary"
            app:np_selectedTextSize="18sp"
            app:np_textColor="@color/primary"
            app:np_textSize="16sp"
            app:np_value="0" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/d_picker"
            android:layout_height="wrap_content"
            app:np_width="60dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/primary_dark"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextColor="@color/primary"
            app:np_selectedTextSize="18sp"
            app:np_textColor="@color/primary"
            app:np_textSize="16sp"
            app:np_value="0"
            android:layout_width="40dp"/>

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/u_picker"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:np_width="60dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/primary_dark"
            app:np_max="9"
            app:np_min="0"
            app:np_selectedTextColor="@color/primary"
            app:np_selectedTextSize="18sp"
            app:np_textColor="@color/primary"
            app:np_textSize="16sp"
            app:np_value="5"/>

        <TextView
            android:text="m"
            android:layout_height="match_parent"
            android:id="@+id/rp_units"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/primary_dark"
            android:layout_width="20dp"/>

    </LinearLayout>

</LinearLayout>